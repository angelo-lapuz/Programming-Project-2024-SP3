@{
    Layout = "_AccountLayout";
}

<div id="form-container">
    <form id="resetPasswordForm">
        <a class="brand-logo-container" asp-controller="Home" asp-action="Index">
            <img src="/img/logo2.png" />
            <span id="brand-name">TAS PEAKS</span>
        </a>

        <h2>Reset Password</h2>
        <p>An email has been sent to your inbox to reset your password.</p>

        <div class="button-container">
            <a href="@Url.Action("Login", "Login")" class="btn btn-primary">Sign In</a>
        </div>
    </form>
</div>
