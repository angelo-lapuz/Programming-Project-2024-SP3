@model PeakHub.ViewModels.ResetPasswordViewModel
@{
    Layout = "_AccountLayout";
}

<div id="form-container">
    <!-- Reset Password Form -->
    <form id="resetPasswordForm" asp-action="ResetPassword" method="post">
        <a class="brand-logo-container" asp-controller="Home" asp-action="Index">
            <img src="/img/logo2.png" />
            <span id="brand-name">TAS PEAKS</span>
        </a>

        <input asp-for="UserName" class="form-control" placeholder="Email" />
        <span asp-validation-for="UserName" class="text-danger"></span>

        <input asp-for="Password" type="password" class="form-control" placeholder="New Password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <input asp-for="Token" type="hidden" />
        <input asp-for="UserId" type="hidden" />
       
        <div class="user-actions">
            <input type="submit" value="Reset Password" class="btn btn-primary" />
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
        </div>


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
