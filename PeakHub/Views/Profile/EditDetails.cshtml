@model PeakHub.ViewModels.EditDetailsViewModel
@{
    Layout = "_AccountLayout";
}

<div id="form-container">
    <!-- Edit Details Form -->
    <form id="editDetailsForm" asp-action="EditDetails" method="post">
        <a class="brand-logo-container" asp-controller="Home" asp-action="Index">
            <img src="/img/logo2.png" />
            <span id="brand-name">TAS PEAKS</span>
        </a>

        <h2>Edit Details</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div style="color: yellow; font-weight: bold; margin-bottom: 15px;">
                @TempData["SuccessMessage"]
            </div>
        }

        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
        <span asp-validation-for="FirstName" class="text-danger"></span>

        <input asp-for="LastName" class="form-control" placeholder="Last Name" />
        <span asp-validation-for="LastName" class="text-danger"></span>

        <input asp-for="Address" class="form-control" placeholder="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>

        <div class="button-container">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="/Profile/Index" class="btn btn-secondary">Return</a>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>
