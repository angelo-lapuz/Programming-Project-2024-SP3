@model PeakHub.ViewModels.EditDetailsViewModel
@{ Layout = "_AccountLayout"; }

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="https://unpkg.com/cropperjs@latest/dist/cropper.css">
<link rel="stylesheet" href="~/css/_profile.css" asp-append-version="true" />

<div id="form-container">
    <!-- Edit Details Form -->
    <form id="editDetailsForm" asp-action="EditDetails" method="post">
        <a class="brand-logo-container" asp-controller="Home" asp-action="Index">
            <img src="/img/logo2.png" />
            <span id="brand-name">TAS PEAKS</span>
        </a>

        <h2>Edit Details</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div style="color: yellow; font-weight: bold; margin-bottom: 15px;">
                @TempData["SuccessMessage"]
            </div>
        }

        <input asp-for="ProfileIMG" id="imgLink" type="hidden" />
        <div id="viewCropped" style="display: none;"></div>

        <input type="file" id="imageSelector" accept="image/*" style="display: none;">
        <a id="addImage" href="#"> <i class="fa-solid fa-pen"></i> Profile Image </a>

        <div id="progressContainer" style="display: none;">
            <p>Uploading, please wait...</p>
            <progress id="progressBar" value="0" max="100"></progress>
        </div>

        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
        <span asp-validation-for="FirstName" class="text-danger"></span>

        <input asp-for="LastName" class="form-control" placeholder="Last Name" />
        <span asp-validation-for="LastName" class="text-danger"></span>

        <input asp-for="Address" class="form-control" placeholder="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>

        <div class="button-container">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="/Profile/Index" class="btn btn-secondary">Return</a>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>

<div id="mediaView" style="display: none;">
    <img id="cropImage" />

    <div id="icon-row">
        <a id="saveImage" href="#">Save &nbsp;<i class="fas fa-cloud-upload-alt"></i></a>
        <a id="cancelImage" href="#">Cancel &nbsp;<i class="fas fa-times"></i></a>
    </div>
</div>

<!-- 'Add an Image' Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/cropperjs@1.5.12/dist/cropper.js"></script>
<script type="module" src="~/js/profileEdit.js"></script>