@model PeakHub.ViewModels.ForumViewModel

<div id="forumContent">
    <section id="forumMenu_1">
        <div>
            <img src="@Model.Board.Image" alt="Board Image" />
            <h4>@Model.Board.Name</h4>
            <p>@Model.Board.Section</p>
        </div>

        <a href="@Url.Action("Board", "Board")" class="btn btn-primary">Go Back</a>
    </section>

    <section id="forumMain">
        <div id="forumHeader">
            <img src="@Model.ProfileImg" alt="Your Profile Image" />
            <h3>@Model.Username</h3>
        </div>

        <div id="forumPosts">
            @if(Model.Posts.Count > 0) {
                foreach (var postViewModel in @Model.Posts) {
                    @await Html.PartialAsync("_Post", postViewModel)
                }
            } else {
                <h2>No Posts! Please Populate</h2>
            }
        </div>
    </section>

    <section id="forumMenu_2">
        <h3>Filters</h3>
    </section>
</div>