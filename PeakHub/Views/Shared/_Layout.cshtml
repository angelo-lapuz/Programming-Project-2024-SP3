<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PeakHub</title>

    <link rel="stylesheet" href="~/css/styleplanner.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="brand-logo">
            <a class="brand-logo-link" asp-area="" asp-controller="Home" asp-action="Index">PeakHub</a>
        </div>
        <nav class="navbar">
            
            <div class="nav-filler"></div>
            <div class="navbar-links">
                <ul class="navbar-list">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">PeakHub</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Planner" asp-action="Index">Planner</a>
                    </li>
                </ul>
            </div>
            <button class="hamburger-menu" type="button">
                <div class="hamburger-menu-dash1"></div>
                <div class="hamburger-menu-dash2"></div>
                <div class="hamburger-menu-dash3"></div>
            </button>

        </nav>
    </header>

    
    <main>
        @RenderBody()
    </main>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
